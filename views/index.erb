<html>
<head>
  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/style.css">
  <script src="bootstrap.js"></script>
  <title>Holidays Selection Tool</title>
</head>
<body>
    <form>
      <h1>Month</h1>
      <select name="month" type="number" required>
        <option value "" disabled selected>Select Your Option</option>
        <option value="1" <%= 'selected="selected"' if params['month'] == '1' %>>January</option>
        <option value="2" <%= 'selected="selected"' if params['month'] == '2' %>>February</option>
        <option value="3" <%= 'selected="selected"' if params['month'] == '3' %>>March</option>
        <option value="4" <%= 'selected="selected"' if params['month'] == '4' %>>April</option>
        <option value="5" <%= 'selected="selected"' if params['month'] == '5' %>>May</option>
        <option value="6" <%= 'selected="selected"' if params['month'] == '6' %>>June</option>
        <option value="7" <%= 'selected="selected"' if params['month'] == '7' %>>July</option>
        <option value="8" <%= 'selected="selected"' if params['month'] == '8' %>>August</option>
        <option value="9" <%= 'selected="selected"' if params['month'] == '9' %>>September</option>
        <option value="10"<%= 'selected="selected"' if params['month'] == '10' %>>October</option>
        <option value="11"<%= 'selected="selected"' if params['month'] == '11' %>>November</option>
        <option value="12"<%= 'selected="selected"' if params['month'] == '12' %>>Decemeber</option>
      </select>
      <h1>Day</h1>
      <select name="day" type="number" required>
        <option value "" disabled selected>Select Your Option</option>
        <option value="1" <%= 'selected="selected"' if params['day'] == '1' %>>1</option>
        <option value="2" <%= 'selected="selected"' if params['day'] == '2' %>>2</option>
        <option value="3" <%= 'selected="selected"' if params['day'] == '3' %>>3</option>
        <option value="4" <%= 'selected="selected"' if params['day'] == '4' %>>4</option>
        <option value="5" <%= 'selected="selected"' if params['day'] == '5' %>>5</option>
        <option value="6" <%= 'selected="selected"' if params['day'] == '6' %>>6</option>
        <option value="7" <%= 'selected="selected"' if params['day'] == '7' %>>7</option>
        <option value="8" <%= 'selected="selected"' if params['day'] == '8' %>>8</option>
        <option value="9" <%= 'selected="selected"' if params['day'] == '9' %>>9</option>
        <option value="10"<%= 'selected="selected"' if params['day'] == '10' %>>10</option>
        <option value="11"<%= 'selected="selected"' if params['day'] == '11' %>>11</option>
        <option value="12"<%= 'selected="selected"' if params['day'] == '12' %>>12</option>
        <option value="13"<%= 'selected="selected"' if params['day'] == '13' %>>13</option>
        <option value="14"<%= 'selected="selected"' if params['day'] == '14' %>>14</option>
        <option value="15"<%= 'selected="selected"' if params['day'] == '15' %>>15</option>
        <option value="16"<%= 'selected="selected"' if params['day'] == '16' %>>16</option>
        <option value="17"<%= 'selected="selected"' if params['day'] == '17' %>>17</option>
        <option value="18"<%= 'selected="selected"' if params['day'] == '18' %>>18</option>
        <option value="19"<%= 'selected="selected"' if params['day'] == '19' %>>19</option>
        <option value="20"<%= 'selected="selected"' if params['day'] == '20' %>>20</option>
        <option value="21"<%= 'selected="selected"' if params['day'] == '21' %>>21</option>
        <option value="22"<%= 'selected="selected"' if params['day'] == '22' %>>22</option>
        <option value="23"<%= 'selected="selected"' if params['day'] == '23' %>>23</option>
        <option value="24"<%= 'selected="selected"' if params['day'] == '24' %>>24</option>
        <option value="25"<%= 'selected="selected"' if params['day'] == '25' %>>25</option>
        <option value="26"<%= 'selected="selected"' if params['day'] == '26' %>>26</option>
        <option value="27"<%= 'selected="selected"' if params['day'] == '27' %>>27</option>
        <option value="28"<%= 'selected="selected"' if params['day'] == '28' %>>28</option>
        <option value="29"<%= 'selected="selected"' if params['day'] == '29' %>>29</option>
        <option value="30"<%= 'selected="selected"' if params['day'] == '30' %>>30</option>
        <option value="31"<%= 'selected="selected"' if params['day'] == '31' %>>31</option>
      </select>

      <h1>Year</h1>
      <input name="year" type="number" value="<%= params['year'] %>" min="1000" max= "9999" required>

      <button type="submit">Submit!</button>
    </form>
    <div class="container-fluid text-center">
      <% if @Holidays_Date.any? %>
        <h1>United States Holidays for Selected Date:</h1>
        <% @Holidays_Date.each do |holiday| %>
          <ul>
            <li><%= holiday['name'] %>, <%=holiday['date'] %></li>
          </ul>
        <% end %>
      <% else %>
        <h3>No Holiday's fall on the date Selected!</h3>
      <% end %>
    </div>
</body>
</html>